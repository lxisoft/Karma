<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity Comment.
    -->
    <changeSet id="20181029105813-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="need_id"
                                 baseTableName="comment"
                                 constraintName="fk_comment_need_id"
                                 referencedColumnNames="id"
                                 referencedTableName="need"/>

        <addForeignKeyConstraint baseColumnNames="help_id"
                                 baseTableName="comment"
                                 constraintName="fk_comment_help_id"
                                 referencedColumnNames="id"
                                 referencedTableName="help"/>

        <addForeignKeyConstraint baseColumnNames="news_feed_id"
                                 baseTableName="comment"
                                 constraintName="fk_comment_news_feed_id"
                                 referencedColumnNames="id"
                                 referencedTableName="news_feed"/>

        <addForeignKeyConstraint baseColumnNames="violation_id"
                                 baseTableName="comment"
                                 constraintName="fk_comment_violation_id"
                                 referencedColumnNames="id"
                                 referencedTableName="violation"/>

    </changeSet>
</databaseChangeLog>
